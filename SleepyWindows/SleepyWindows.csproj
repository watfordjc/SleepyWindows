<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>uk.JohnCook.dotnet.SleepyWindows</RootNamespace>
    <PackageId>uk.JohnCook.dotnet.SleepyWindows</PackageId>
    <Authors>John Cook</Authors>
    <Description>Sometimes Windows needs a little help falling asleep.</Description>
    <Copyright>© John Cook 2021.</Copyright>
    <Version>0.1.0</Version>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <IncludePackageReferencesDuringMarkupCompilation>true</IncludePackageReferencesDuringMarkupCompilation>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWin32" Version="0.1.506-beta">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Windows.SDK.Win32Metadata" Version="10.2.118-preview" />
  </ItemGroup>

</Project>
